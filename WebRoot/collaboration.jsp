		// 新闻信息 
		function getHTMLForNews(data, len) {
			if (!data) {
				return '';
			}

			var html = '';
			for (var i = 0; i < len; i++) {
				if (i >= len || i >= data.length) {
					break;
				}
				html += '<div><span class="glyphicon glyphicon-bullhorn" style="margin-right:5px;"></span><a href="'
                    + data[i].url+'" target="_blank">'
						+ data[i].title
						+ '</a> -- '
						+ data[i].publisher
						+ '</div>';
			}

			return html;
		}
